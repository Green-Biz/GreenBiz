<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DTD -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin.dept.dao.face.DeptDao">

	<select id="selectCntDept" resultType="int">
		SELECT count(*) FROM dept
	</select>

	<select id="selectDeptList" resultType="Dept" parameterType="Dept">
		SELECT
			  deptNum, adminNo, deptName
		FROM dept
		WHERE deptNum = #{deptNum}
	</select>

	<insert id="insertDept" parameterType="Dept">
		<selectKey order="BEFORE" resultType="int" keyProperty="deptNum">
			SELECT dept_seq.nextval FROM dual
		</selectKey>
	</insert>
	
	<select id="deptList" resultType="Dept">
		SELECT
			  deptNum, adminNo, deptName
		FROM 
			dept
	</select>
	
	<select id="memberByDeptNum" resultType="Map" parameterType="Map">
		select 
			d.deptname, m.membername, m.rank, m.memberno, d.deptnum 
		from 
			member m 
		left join 
			dept d on m.deptnum = d.deptnum
		where 
			d.deptnum = #{deptNum}
			<if test="type != null">
				<if test = "type == 'memberno'">
					and m.memberno = #{keyword}
				</if>
				<if test = "type == 'membername'">
					and m.membername  LIKE '%' || #{keyword} || '%'  
				</if>
			</if>	
	</select>
	
	</mapper>